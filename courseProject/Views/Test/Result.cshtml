@model courseProject.ViewModels.ResultViewModel;

@{
    ViewData["Title"] = "Результат теста";
}

<div class="top-content">

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">К тестам</a>

    <div class="container pt-5">
        <div class="d-flex flex-column align-items-center">
            <h2>Тесты / @Model.Category.Name</h2>
            <h1>@Model.Test.Name</h1>
        </div>
    </div>
</div>

<div class="middle-content">
    <div class='container pt-5'>
        <h1>Ваши результаты</h1>
        <p>@Model.ResultTest.Description</p>
        <form asp-controller="Test" asp-action="RepeatTest">
            <input type="hidden" name="testId" value="@Model.Test.Id">
            <button type="submit" class="btn btn-outline-primary">Пройти тест заново</button>
        </form>
    </div>
</div> 