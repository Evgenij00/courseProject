@model myCourseProject.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Вход";
}

<div class="login-container">
    <form class="login-form" method="post" asp-controller="Account" asp-action="Login">
        <h1 class="title">Вход</h1>

        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
        </div>

        <button type="submit" class="btn btn-primary">Войти</button>

        <a asp-controller="Account" asp-action="Register" class="link-auth">Регистрация</a>
    </form>
</div>