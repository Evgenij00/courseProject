@model сourseProject.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Вход";
}

<div class="login-container">
    <form class="login-form" method="post" asp-controller="Account" asp-action="Login">
        <h1 class="title">Вход</h1>

        @*TODO: разобраться с asp-validation-summary="ModelOnly"*@
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        </div>
        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
        </div>
        <a class='link-help-pass' href="#"><small class="form-text text-muted">Забыли пароль?</small></a>
        <div class="remember-me">
            <input asp-for="RememberMe" type="checkbox" />
            <label asp-for="RememberMe"></label><br />
        </div>

        <button type="submit" class="btn btn-primary">Войти</button>

        <a asp-controller="Account" asp-action="Register" class="link-auth">Регистрация</a>
    </form>
</div>