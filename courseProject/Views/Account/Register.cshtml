@model сourseProject.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация";
}

<div class="login-container">

    <form class="login-form" method="post" asp-controller="Account" asp-action="Register">
        <h1 class="title">Регистрация</h1>

        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
        </div>

        <div class="form-group">
            <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" />
        </div>

        <button type="submit" class="btn btn-primary">Регистрация</button>

        <a asp-controller="Account" asp-action="Login" class="link-auth">Авторизация</a>
    </form>
</div>